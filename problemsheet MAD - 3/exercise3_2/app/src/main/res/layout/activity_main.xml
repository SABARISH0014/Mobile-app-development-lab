<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F2F2F2"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We hope you enjoyed your meal with us today"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="#555555"
                android:textAlignment="center"
                android:layout_marginTop="10dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="5"
                android:progressTint="#FF4081"
                android:secondaryProgressTint="#FF4081" />

            <TextView
                android:id="@+id/tvRatingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Awesome. I love it"
                android:layout_marginTop="12dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="Leave a comment (Required)"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:minLines="3"
                android:background="@null"
                android:gravity="top|start"
                android:textColor="#000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FF4081"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="SEND FEEDBACK"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E57373"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>